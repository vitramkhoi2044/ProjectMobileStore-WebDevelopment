@model IEnumerable<ProjectWeb.Data.BrandCategories>

@{
    ViewData["Title"] = "Index";
}

<section class="contact spad">
    <div class="container">
        <div class="row">
            <h1>Index</h1>
        </div>
        <div class="row">
            <div>
                <a asp-action="Create" class="btn btn-success">Create New</a>
            </div>
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.BrandName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BrandDescription)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BrandName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BrandDescription)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.BrandID" class="btn btn-success">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.BrandID" class="btn btn-success">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.BrandID" class="btn btn-success">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>   
    </div>
</section>


